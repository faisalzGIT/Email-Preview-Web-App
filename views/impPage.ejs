<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Email Client</title>
  <link rel="stylesheet" href="/output.css">
</head>
<body class="h-screen flex bg-gray-100">
  <!-- Sidebar (Keep it the same) -->
  <aside class="w-1/5 bg-white p-4 border-r">
    <div class="flex items-center space-x-2 mb-6">
      <span class="w-3 h-3 bg-red-500 rounded-full"></span>
      <span class="w-3 h-3 bg-yellow-500 rounded-full"></span>
      <span class="w-3 h-3 bg-green-500 rounded-full"></span>
    </div>
    <p class="text-sm font-semibold mb-4 text-gray-700">
      <span class="text-gray-500">Logged in as:</span> 
      <span class="text-blue-600"><%= myGmailDetails.myEmailAddress %></span>
    </p>
    <ul class="space-y-2">
      <% labelCounts.forEach(label => { %>
        <li class="flex justify-between text-gray-700 font-semibold">
          <span><%= label.name %></span> <span><%= label.totalMessages %></span> 
        </li>
      <% }); %>
    </ul>
  </aside>

  <!-- Email List (Now Covers Full Right Side) -->
  <main class="w-4/5 p-6">
    <h2 class="text-2xl font-bold text-gray-800 mb-4">Inbox</h2>

    <div class="overflow-y-auto h-[89vh] space-y-3 pr-4">
      <% emailDetails.forEach((email) => { %>
        <div class="bg-white p-4 shadow rounded-lg cursor-pointer transition hover:shadow-md border border-gray-200">
          <!-- Glowing Sender Name -->
          <p class="text-sm font-semibold text-gray-800">
            <span class="text-blue-600 text-base drop-shadow-md">
              <%= email.sender.split('<')[0].trim() %>
            </span>
          </p>

          <!-- Email Subject -->
          <h3 class="font-semibold text-gray-900 text-lg mt-1">
            <%= email.subject %>
          </h3>

          <!-- Email Snippet -->
          <p class="text-sm text-gray-600 mt-1 truncate">
            <%= email.emailSnippet %>
          </p>
        </div>
      <% }) %>
    </div>
  </main>
</body>


</html>
